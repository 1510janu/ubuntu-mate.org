source "https://rubygems.org"

# Suppress Ruby 2.7 warnings until Jekyll 4.1 by pinning onto a 4.0-4.1 commit.
# https://github.com/jekyll/jekyll/issues/7947#issuecomment-587935866
gem "jekyll", github: "jekyll/jekyll", ref: "0683ab1"
gem "bundler"

group :jekyll_plugins do
    # RSS Feed Generation
    gem "jekyll-feed"

    # i18n Support
    gem "jekyll-polyglot"
end

# WebP Generator
# https://github.com/sverrirs/jekyll-webp
gem "jekyll-webp"

